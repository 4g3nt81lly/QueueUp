{
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["**/*.ts"],
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": ["**/*.tsx"],
            "options": {
                "printWidth": 100
            }
        }
    ]
}